= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
      %ul
        - @deposit.errors.full_messages.each do |msg|
          %li= msg
  
  %p
    %strong If you have more than 1 option please tell us

    .field
      = f.label :make
      %br/
      = f.text_field :make2
    
    .field
      = f.label :model
      %br/
      = f.text_field :model2

      
    .field
      = f.label :make
      %br/
      = f.text_field :make3
    
    .field
      = f.label :model
      %br/
      = f.text_field :model3  
  
  %p 
    %strong Please describe your car, be as specific as possible. What colors would you consider, what accesories you'd like, the more information we have the better we can serve you

    .field
      = f.label :description
      %br/
      = f.text_area :description 


  %p
    %strong Your Information (Kept private)
  .field
    = f.label :name
    %br/
    = f.text_field :name
  
  .field
    = f.label :email
    %br/
    = f.text_field :email
  
  .field
    = f.label :phone
    %br/
    = f.text_field :phone  
  
  .actions
    = submit_tag ('Finish'), :class => "button orange"
  

