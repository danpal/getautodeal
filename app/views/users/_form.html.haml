= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
      %ul
        - @deposit.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :zip_code
    %br/
    = f.text_field :zip_code
  
  .field
    = f.label :name
    %br/
    = f.text_field :name
  
  .field
    = f.label :email
    %br/
    = f.text_field :email  
  
  .field
    = f.label :phone
    %br/
    = f.text_field :phone

  .actions
    = submit_tag ('Get the best deal!'), :class => "button orange"
  

